<UserControl x:Class="CloudBox.Wpf.Menu.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TextBlock TextAlignment="Center" FontSize="20" HorizontalAlignment="Center" Margin="0,15,0,0" TextWrapping="Wrap" Text="CloudBox" VerticalAlignment="Top"/>
        
        <Button x:Name="LoginButton" FontSize="12" Content="Log In" HorizontalAlignment="Center" Margin="0,0,0,50" VerticalAlignment="Center" Width="200" Height="30" Background="PowderBlue" ToolTip="Click to Log in using existing account" Click="LoginButton_OnClick"/>
        <Button x:Name="RegisterButton" FontSize="12" Content="Register" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Center" Width="200" Height="30" Background="PowderBlue" ToolTip="Click to Register new account" Click="RegisterButton_OnClick"/>
        
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Copyright © 2017, Arseni Barsegyan" VerticalAlignment="Bottom" Margin="0,0,13,15"/>
    </Grid>
</UserControl>
