@model IEnumerable<UserStore.BLL.DTO.OrderDto>

<h2>Results:</h2>
<div class="panel panel-primary">
    <div class="panel-heading">
        Founded orders
    </div>
    <table class="table table-striped">
        <tr>
            <th>Product Id</th>
            <th>Manager name</th>
            <th>Client name</th>
            <th>Product name</th>
            <th>Order price</th>
            <th>Order date</th>
            <th></th>
            <th></th>
        </tr>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="3" class="text-center">There is no orders</td>
            </tr>
        }
        else
        {
            foreach (var orderDto in ViewBag.Orders)
            {
                <tr>
                    <td>@orderDto.Id</td>
                    <td>@orderDto.ManagerName</td>
                    <td>@orderDto.ClientName</td>
                    <td>@orderDto.ProductName</td>
                    <td>@orderDto.Price</td>
                    <td>@orderDto.Date</td>
                    <td><p><a class="btn btn-default" href="/Order/Edit/@orderDto.Id">Edit</a></p></td>
                    <td><p><a class="btn btn-default" href="/Order/Delete/@orderDto.Id">Delete</a></p></td>
                </tr>
            }
        }
    </table>
</div>
