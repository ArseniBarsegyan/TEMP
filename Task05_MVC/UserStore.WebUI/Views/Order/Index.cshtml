@model PagedList.IPagedList<UserStore.BLL.DTO.OrderDto>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Index";
}

<a class="btn btn-success" href="/Order/Create/">Create</a>
<a class="btn btn-default" href="/Admin/Index/">Users</a>
<a class="btn btn-default" href="/Manager/Index/">Managers</a>
<a class="btn btn-default" href="/Product/Index/">Products</a>

<div class="panel panel-primary">
    <div class="panel-heading">
        All sales
    </div>
    <table class="table table-striped">
        <tr>
            <th>Product Id</th>
            <th>Manager name</th>
            <th>Client name</th>
            <th>Product name</th>
            <th>Order price</th>
            <th>Purchase date</th>
        </tr>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="3" class="text-center">There is no orders</td>
            </tr>
        }
        else
        {
            foreach (var purchase in Model)
            {
                <tr>
                    <td>@purchase.Id</td>
                    <td>@purchase.ManagerName</td>
                    <td>@purchase.ClientName</td>
                    <td>@purchase.ProductName</td>
                    <td>@purchase.Price</td>
                    <td>@purchase.Date</td>
                    <td><p><a class="btn btn-default" href="/Order/Edit/@purchase.Id">Edit</a></p></td>
                    <td><p><a class="btn btn-default" href="/Order/Delete/@purchase.Id">Delete</a></p></td>
                </tr>
            }
        }
    </table>
</div>

Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) from @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))