@using UserStore.BLL.DTO

@model IEnumerable<ProductDto>
@{
    ViewBag.Title = "Index";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        All products
    </div>
    <table class="table table-striped">
        <tr>
            <th>Product Id</th>
            <th>Product name</th>
            <th>Product price</th>
        </tr>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="3" class="text-center">There is no purchases</td>
            </tr>
        }
        else
        {
            foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td><p><a class="btn btn-default" href="/Product/Edit/@product.Id">Edit</a></p></td>
                    <td><p><a class="btn btn-default" href="/Product/Delete/@product.Id">Delete</a></p></td>
                </tr>
            }
        }
    </table>
    <a class="btn btn-default" href="/Product/Create/">Create</a>
</div>

