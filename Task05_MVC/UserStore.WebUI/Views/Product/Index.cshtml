@model PagedList.IPagedList<UserStore.BLL.DTO.ProductDto>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
}

<a class="btn btn-success" href="/Product/Create/">Create</a>

@using (Ajax.BeginForm("ProductSearch", new AjaxOptions
{
    UpdateTargetId = "results",
    LoadingElementId = "loading",
    LoadingElementDuration = 500,
    Confirm = "Execute AJAX-query?"
}))
{
    <div class="form-group">
        <input type="text" placeholder="Product name" name="name" class="form-control"/>
        <input type="submit" class="btn btn-default" value="Search"/>
    </div>
}

<div id="loading" style="display: none; color: red; font-weight: bold">
    <p>loading...</p>
</div>

<div id="results">
</div>

<div class="panel panel-primary">
    <div class="panel-heading">
        All products
    </div>
    <table class="table table-striped">
        <tr>
            <th>Product Id</th>
            <th>Product name</th>
            <th>Product price</th>
        </tr>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="3" class="text-center">There is no purchases</td>
            </tr>
        }
        else
        {
            foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td><p><a class="btn btn-default" href="/Product/Edit/@product.Id">Edit</a></p></td>
                    <td><p><a class="btn btn-default" href="/Product/Delete/@product.Id">Delete</a></p></td>
                </tr>
            }
        }
    </table>
</div>

Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) from @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))