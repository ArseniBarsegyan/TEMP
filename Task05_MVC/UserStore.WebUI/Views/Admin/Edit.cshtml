@model UserStore.BLL.DTO.UserDto

@{
    ViewBag.Title = "Edit";
}

<h2>Correct user data</h2>
<div class="form-control-static">
    <label>Id</label>
    <p class="form-cotrol-static">@Model.Id</p>
</div>

@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.Id)
    <div class="form-group">
        <label>Name</label>
        @Html.TextBoxFor(x => x.Name, new {@class="form-control"})
    </div>
    <div class="form-group">
        <label>Password</label>
        @Html.PasswordFor(x => x.Password, new {@class="form-control"})
    </div>
    <input type="submit" class="btn btn-danger" value="Correct" />
    <input type="button" class="btn btn-default" title="Back" value="Back" onclick="history.back()" />
}

