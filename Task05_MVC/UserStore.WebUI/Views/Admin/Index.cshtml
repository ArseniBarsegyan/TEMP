@model PagedList.IPagedList<UserStore.BLL.DTO.UserDto>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
}

@Scripts.Render("~/scripts/jquery-1.10.2.min.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")

<div class="btn btn-group">
    <a class="btn btn-default" href="/Order/Index/">Orders</a>
    <a class="btn btn-default" href="/Manager/Index/">Managers</a>
    <a class="btn btn-default" href="/Product/Index/">Products</a>
</div>

@using (Ajax.BeginForm("UserSearch", new AjaxOptions { UpdateTargetId = "results" }))
{
    <div class="form-group">
        <input type="text" name="name" class="form-control" />
        <input type="submit" class="btn btn-default" value="Search" />
    </div>
}

<div id="results">
</div>

<div class="panel panel-primary">
    <div class="panel-heading">
        Users accounts
    </div>
    <table class="table table-striped">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Role</th>
        </tr>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="3" class="text-center">There are no users accounts</td>
            </tr>
        }
        else
        {
            foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Name</td>
                    <td>@user.Role</td>
                    <td><p><a class="btn btn-default" href="/Admin/Edit/@user.Id">Edit</a></p></td>
                    <td><p><a class="btn btn-default" href="/Admin/Delete/@user.Id">Delete</a></p></td>
                </tr>
            }
        }
    </table>
</div>

Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) from @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))