@using UserStore.BLL.DTO

@model IEnumerable<UserDto>

@{
    ViewBag.Title = "Index";
}

@Html.ActionLink("Register user", "Register", null, new { @class = "btn btn-primary" })
<div class="panel panel-primary">
    <div class="panel-heading">
        Users accounts
    </div>
    <table class="table table-striped">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Role</th>
        </tr>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="3" class="text-center">There is no user accounts</td>
            </tr>
        }
        else
        {
            foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Name</td>
                    <td>@user.Role</td>
                    <td><p><a class="btn btn-default" href="/Admin/Edit/@user.Id">Edit</a></p></td>
                    <td><p><a class="btn btn-default" href="/Admin/Delete/@user.Id">Delete</a></p></td>
                </tr>
            }
        }
    </table>
</div>